{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "plugins": [
      "mocha",
      "chai-expect",
      "sinon"
    ],
    "globals": {
        "sinon": true,
        "proxyquire": true,
        "chai": true,
        "expect": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "no-console":0,
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "mocha/no-exclusive-tests": "error",
        "chai-expect/no-inner-compare": 2,
        "chai-expect/missing-assertion": 2,
        "chai-expect/terminating-properties": 1,
        "sinon/no-fakes": 2
    }
}